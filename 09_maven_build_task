apiVersion: tekton.dev/v1
kind: Task
metadata:
  name: maven-build
spec:
  params:
    - name: goal
      type: string
    - description: maven goal to be executed
      default: compile
  workspaces:
    - name: source-code
  steps:
    - name: maven
      image: kulbhushanmayer/ubuntu:appBuild
      command: ["mvn"]     
      args:
      - "$(params.goal)"